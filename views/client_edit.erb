<h1>Update <%=@client.name() %> <span class="glyphicon glyphicon-pencil"></span></h1>
<br>

<form action="/clients/<%= @client.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Rename Client:</label>
  <input id="name" name="name" type="text">
  <button type="submit">Update</button>
</form>

<form action="/client/<%= @client.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-primary btn-md" >Delete Client</button>
</form>

<br><br><br>

<div class="buttons">
  <a class="btn btn-primary btn-md" href="/" role="button">Return Home</a>
</div>
