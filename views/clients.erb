<div class="container">
  <h2>All Clients</h2>

  <% if @clients.any?() %>
      <h3>Current Clients:</h3>
      <ul>
        <% @clients.each() do |client| %>
          <li><a href="/clients/<%= client.id() %>"> <%= client.name() %></a></li>
        <% end %>
      </ul>
  <% else %>
        <p>There are currently no clients. Try <a href="/clients/new">adding a new client</a>, or <a href="/stylists">checking out our stylists</a> instead.</p>
  <% end %>
  <p><a class="btn btn-primary btn-md" href="/" role="button"> < Go Back</a></p>
</div>
